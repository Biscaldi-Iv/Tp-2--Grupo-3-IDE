<div class="text-center" id="cuerpo">

    <!-- Custom styles for this template >
    <link href="~/css/signin.css" rel="stylesheet"-->

    <style>

        .cuerpo {
            height: 100%;
        }

        .cuerpo {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-floating:focus-within {
                z-index: 2;
            }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>


    <main class="form-singin">
        <form method="post" action="SingIn/Login">
            <!--img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"-->
            <h1 class="h3 mb-3 fw-normal">Iniciar Sesion</h1>

            <div class="form-floating">
                <input class="form-control" id="floatingInput" name="nomUsuario" placeholder="Usuario123" required>
                <label for="floatingInput">Nombre de Usuario</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" name="contraseña" placeholder="Contraseña">
                <label for="floatingPassword">Contraseña</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                //error(del usuario) de inicio de sesion
                <div class="alert alert-warning">ViewBag.Message</div>
            }
            }
            <button class="w-100 btn btn-lg btn-primary" type="submit" action="">Sign in</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        </form>
    </main>



</div>
