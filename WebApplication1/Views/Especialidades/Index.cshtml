@{
    @using Business.Entities;
    @using Business.Logic;
    @using System.Collections.Generic;


    ViewData["Title"] = "Especialidades";

    EspecialidadLogic espL = new EspecialidadLogic();
}

<table class="table-responsive table-bordered" id="esp">
    <thead>ID</thead>
    <thead>Especialidad</thead>
        @{ 
            foreach (Especialidad e in espL.GetAll())
            {
                <tr>
                    <td>@e.ID</td>
                    <td>@e.Descripcion</td>
                </tr>
            }
        }
    
</table>
